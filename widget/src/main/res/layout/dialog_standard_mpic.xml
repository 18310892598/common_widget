<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_common_white_corner"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dia_iv_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:src="@mipmap/icon_prompt_wait_pay" />

        <TextView
            android:id="@+id/dia_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/dia_black_333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dia_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="4"
            android:text=""
            android:textColor="@color/dia_gray_4f545a"
            android:textSize="14sp" />

        <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/white_e7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dia_tv_negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="13dp"
                android:textColor="@color/textcolor_4f"
                android:textSize="14sp" />

            <View
                android:id="@+id/divider_line2"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white_e7" />

            <TextView
                android:id="@+id/dia_tv_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="13dp"
                android:text="确定"
                android:textColor="@color/textcolor_3E"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
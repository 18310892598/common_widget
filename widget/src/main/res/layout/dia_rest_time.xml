<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
	
	<TextView
		android:id="@+id/tv_countdown_display"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:gravity="center"
		android:textColor="@color/dia_black_333"
		android:textSize="43sp"
		tools:text="00:00"/>
	
	<TextView
		android:id="@+id/dia_tv_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginLeft="26dp"
		android:layout_marginTop="35dp"
		android:layout_marginRight="26dp"
		android:gravity="center"
		android:text="@string/dia_content_rest_time"/>
	
	<TextView
		android:id="@+id/dia_tv_positive"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginLeft="26dp"
		android:layout_marginTop="40dp"
		android:layout_marginRight="26dp"
		android:layout_marginBottom="26dp"
		android:gravity="center"
		android:background="@drawable/bg_positive_btn"
		android:text="@string/dia_positive_i_got_it"
		android:textColor="@color/dia_white"
		android:textSize="15sp"/>
</LinearLayout>
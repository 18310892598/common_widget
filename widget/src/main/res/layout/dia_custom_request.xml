<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="vertical"
		>
		
		<TextView
			android:id="@+id/dia_tv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center"
			android:textSize="20sp"
			android:textColor="@android:color/black"
			android:layout_marginTop="30dp"
			/>
		
		<TextView
			android:id="@+id/dia_tv_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxLines="4"
			android:ellipsize="end"
			android:layout_gravity="center"
			android:textSize="15sp"
			android:textColor="@color/dia_black_25"
			android:layout_marginTop="10dp"
			/>
		
		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:layout_marginTop="30dp"
			android:background="@color/dia_white_e7"/>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="horizontal"
			android:gravity="center"
			>
			
			<TextView
				android:id="@+id/dia_tv_negative"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:textSize="15sp"
				android:singleLine="true"
				android:text="@string/dia_cancel"
				android:textColor="@color/dia_blue_0076ff"
				/>
			
			<View
				android:layout_width="0.5dp"
				android:layout_height="match_parent"
				android:background="@color/dia_white_e7"/>
			
			<TextView
				android:id="@+id/dia_tv_positive"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:singleLine="true"
				android:gravity="center"
				android:text="@string/dia_positive_confirm"
				android:textSize="15sp"
				android:textColor="@color/dia_blue_0076ff"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>

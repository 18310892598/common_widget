<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="25dp"
              android:paddingRight="25dp"
              android:background="@android:color/transparent"
              android:orientation="vertical">

    <ImageView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_question_camera"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="16dp">

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:text="发现新版本"
                android:textColor="@color/dia_black_232931"
                android:textSize="16sp"
                android:textStyle="bold"/>


        <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:text="版本号：2.1"
                android:textColor="@color/dia_gray_4F545A"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="安装包大小：23MB"
                android:textColor="@color/dia_gray_4F545A"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="更新时间：2019-06-5 12:12:12"
                android:textColor="@color/dia_gray_4F545A"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:text="全新视觉体验，界面更加年轻；底部新增活动入口，各项活动、优惠信息一目了然；下单用车区分青春、灵动、拼车，满足您不一样的出行场景"
                android:textColor="@color/dia_gray_4F545A"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/bt_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_update_button_user"
                android:gravity="center"
                android:padding="15dp"
                android:text="立即更新"
                android:textColor="@color/dia_white"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/bt_cancle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="下次再说"
                android:textColor="@color/dia_gray_A7A9AD"
                android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>